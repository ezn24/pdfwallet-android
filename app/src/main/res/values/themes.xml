<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GruenerPass" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Theme.GruenerPass.PureBlack" parent="Theme.GruenerPass">
        <item name="colorPrimary">@color/pureBlackButtonColor</item>
        <item name="colorPrimaryVariant">@color/pureBlackButtonColor</item>
        <item name="colorSecondary">@color/pureBlackButtonColor</item>
        <item name="colorOnPrimary">@color/pureBlackButtonTextColor</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorSurfaceContainer">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>
